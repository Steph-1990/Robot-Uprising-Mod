<?xml version="1.0" encoding="utf-8"?>
<particles>

    <texture>art/textures/particles/lightning.png</texture>
    <blend mode="over"/>

    <constant name="emissionrate" value="150.0"/>
    <uniform name="lifetime" min="0.1" max="0.8"/>

    <constant name="position.y" value="0"/>

    <uniform name="angle" min="-3.14" max="3.14"/>

    <uniform name="velocity.x" min="0.0" max="0.5"/>
    <uniform name="velocity.y" min="0.0" max="1.0"/>
    <uniform name="velocity.z" min="0.0" max="0.5"/>

    <uniform name="size" min="1.0" max="6.5"/>
	<constant name="size.growthRate" value="1.0"/>

    <expr name="color.r"  from="colorr" mul="1.0" max="1.0"/>
    <expr name="color.g" from="colorg"  mul="1.0" max="1.0"/>
    <expr name="color.b"  from="colorb"  mul="1.0"  max="1.0"/>

</particles>
